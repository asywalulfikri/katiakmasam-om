<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:layout_height="50dp">

    <HorizontalScrollView
        android:id="@+id/xx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_bus"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:maxLines="2"
                android:background="@drawable/rounded_bottomm"
                android:padding="5dp"
                android:text="Telolet Bus"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_legenda"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:maxLines="2"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/rounded_bottomm"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="Klakson Fuso"
                android:textColor="#fff"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_hikayat"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:maxLines="2"
                android:layout_marginLeft="15dp"
                android:background="@drawable/rounded_bottomm"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="Klakson Mobil"
                android:textColor="#fff"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btn_ceritarakyat"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:maxLines="2"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/rounded_bottomm"
                android:padding="10dp"
                android:textStyle="bold"
                android:text="Klakson Motor"
                android:textColor="#fff"
                android:textSize="10sp" />

        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>